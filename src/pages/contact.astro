---
import Centred from '../components/Centred.astro';
import Layout from '../layouts/Layout.astro';

import en from '../lang/en';
import Socials from '../components/Socials.astro';

const title = "Contact Us";
---

<Layout title={en.contact.title}, description={en.contact.description}>
    <Centred>
        <h1>{en.contact.intro}</h1>
        <Socials />
    </Centred>
</Layout>

<style>
    h1 {
    color: var(--color);
    font-size: 2.25rem;
    }
</style>
