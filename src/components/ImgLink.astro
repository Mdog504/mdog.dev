---
interface Props {
    name: string;
    href: string;
    imageUri: string;
}

const { name, href, imageUri } = Astro.props;
---

<a href={href} target="_blank" rel="noopener noreferrer">
    <img
        src={imageUri}
        title={name}
    />
</a>

<style>
    img {
        border-radius: 50%;
        width: 48px;
        height: 48px;
    }
</style>